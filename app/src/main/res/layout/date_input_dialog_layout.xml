<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

       <CalendarView
           android:id="@+id/calendarView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="25dp"
           android:layout_marginEnd="25dp"
           android:weekNumberColor="@color/main_orange"
           android:background="@drawable/item_background_shape"
           android:maxDate="1/01/2999"
           android:minDate="1/01/2010"/>

        <Button
            android:id="@+id/okButtonDate"
            android:layout_width="150dp"
            android:layout_height="74dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="-35dp"
            android:background="@drawable/circle_shape"
            android:elevation="18dp"
            android:fontFamily="@font/gill_sans_semibold"
            android:onClick="onClickOkDate"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>