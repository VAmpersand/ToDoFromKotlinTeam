<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventItemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:layout_marginBottom="21dp"
    android:background="@drawable/item_background_shape"
    android:elevation="19dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gill_sans_regular"
            android:text="TextView"
            android:textColor="@color/text_title"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/gill_sans_regular"
            android:text="TextView"
            android:textColor="@color/text_title"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="clip_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/timeIcon"
                android:layout_width="21dp"
                android:layout_height="21dp"
                app:srcCompat="@drawable/ic_watch"
                app:tint="@color/text_subtitle" />

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/gill_sans_regular"
                android:text="TextView"
                android:textColor="@color/text_title"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/partnerIcon"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/ic_people"
                app:tint="@color/text_subtitle" />

            <TextView
                android:id="@+id/partnerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/gill_sans_regular"
                android:text="TextView"
                android:textColor="@color/text_title"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/colorView"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/circle_shape"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>